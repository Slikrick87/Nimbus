@using Nimbus.Shared.Services;
@using Nimbus.Shared.Entities;
@using Nimbus.Shared.Repositories;
@inject IRouteRepository RouteRepository;
@inject ITruckRepository TruckRepository;
@inject TempService TempService;
@page "/selectRoute"

<h3>Select Route</h3>
@* <h1>Truck: @TruckRepository.currentTruck.id</h1>
 *@
 <form method="post">
    <ul>
        @foreach (RouteEntity route in RouteRepository.GetAllRoutes())
        {
            <li>ID: @route.Id Area: @route.nickName</li>
            <button color="Primary Color" class="btn btn-primary" @onclick="ChooseRoute">Select</button>
        }
    </ul>
</form>
<div class="nav-item px-3">
    <NavLink class="nav-link" href="newStop">
        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add New Stops
    </NavLink>
</div>
@* <h3>Current Route: @route.Id Name: @route.nickName</h3>
 *@
 @code {
    public RouteEntity? route;
    public int routeid = 0;
        public void ChooseRoute()
    {
        route = RouteRepository.GetRouteById(routeid);
        TempService.selectedRoute = route;
    }

}
